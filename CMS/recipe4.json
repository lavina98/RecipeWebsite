    "steps": [
        {
            "order": 1,
            "step": "Soak the chick peas overnight and boil them in a pressure cooker. Also boil the potatoes and peel them."
        },
        {
            "order": 2,
            "step": "Grind the chick peas and add the boiled potatoes. Add salt, red chilli powder, cumin powder and mix well {ImageId:1}"
        }, 
        {
            "order": 3,
            "step": "Make small pattice and shallow fry them in a pan till golden brown.{ImageId:2}"
        },
        {
            "order": 4,
            "step": "Mix cold curd with sugar till the sugar dissolves.{ImageId:3}"
        },
        {
            "order": 5,
            "step": "Add 3 pattices in a plate. Add chopped onions and and green chillies{ImageId:4}"
        },
        {
            "order": 6,
            "step": "Over it add curd, green chutney and tamarind chutney."
        },
        {
            "order": 7,
            "step": "Garnish with red chilli powder, cumin powder ,coriander leaves and serve.{ImageId:5}"
        }
    ]
